<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardCornerRadius="4dp">

    <ImageView
        android:id="@+id/cover_view"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:scaleType="centerCrop"
        android:src="@drawable/demo_img"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="#66000000"/>

    <TextView
        android:id="@+id/rating_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:text="3.4"
        android:textSize="18sp"
        android:padding="4dp"
        android:background="@drawable/rating_view_background"
        android:textColor="@color/white_100_percent"/>

    <TextView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:textSize="21sp"
        android:layout_marginLeft="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/white_100_percent"
        android:text="Restaurant Name"/>

    <TextView
        android:id="@+id/cuisine_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="14sp"
        android:layout_marginTop="88dp"
        android:layout_marginLeft="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/white_100_percent"
        android:layout_marginBottom="6dp"
        android:text="Cuisine"/>

    <TextView
        android:id="@+id/cost_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="right"
        android:text="$$$$"
        android:textSize="14sp"
        android:textColor="@color/white_40_percent"/>

    <TextView
        android:id="@+id/area_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:layout_marginLeft="8dp"
        android:textSize="16sp"
        android:textColor="@color/black_80_percent"
        android:text="Area"/>

    <TextView
        android:id="@+id/outlets_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/black_60_percent"
        android:text="2 outlets near you"/>

    <ImageView
        android:id="@+id/expand_action_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_gravity="right"
        android:layout_marginTop="118dp"
        android:background="@drawable/ripple_background"
        android:src="@drawable/ic_keyboard_arrow_down_grey_400_18dp"/>

    <LinearLayout
        android:id="@+id/outlets_container"
        android:layout_marginTop="156dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"/>

</android.support.v7.widget.CardView>